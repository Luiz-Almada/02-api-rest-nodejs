{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,    
    "module": "esnext",
    "target": "es2022", // Atualizado para Node 22
    
    // File Layout - Habilitando os diret√≥rios
    //"rootDir": "./src",
    //"outDir": "./build",
        
    // For nodejs:
    "lib": ["es2022"], // Atualizado para Node 22
    "types": ["node"],
    
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}